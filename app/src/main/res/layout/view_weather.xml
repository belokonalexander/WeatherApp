<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#212121"
            android:textSize="36sp"
            tools:text="+25Â°C" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/temperature"
            android:layout_below="@+id/temperature"
            android:layout_marginTop="16dp"
            android:textColor="#757575"
            android:textSize="14sp"
            tools:text="Humidity: 73%" />

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/humidity"
            android:layout_below="@+id/humidity"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#757575"
            android:textSize="14sp"
            tools:text="Pressure: 760 mmHg" />

        <android.support.v4.widget.Space
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pressure"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/center"
            android:layout_alignTop="@+id/temperature"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/pressure"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_sun" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
